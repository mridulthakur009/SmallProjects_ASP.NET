<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @*1st way to call Partial View*@
    @Html.Partial("_MyPartialView")

    @*2nd  way to call Partial View*@
    @*@Html.RenderPartial("_MyPartialView")*@

    @*3rd way to call Partial View*@
    @*@Html.Action("LoadPartialView")*@   @*--LoadPartialView is a ActionName mean the argument will be Action*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
